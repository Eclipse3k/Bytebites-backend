# Environment Selection
# Options: development, testing, production
FLASK_ENV=development

# Database URLs for different environments
DATABASE_URL=postgresql://jorge:4345@localhost/bytebites_dev
DATABASE_TEST_URL=postgresql://jorge:4345@localhost/bytebites_test

# For production, you must set this
# DATABASE_URL=postgresql://user:password@host:port/bytebites

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
TEST_JWT_SECRET_KEY=your-test-jwt-secret-key-here

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# API Keys
USDA_API_KEY=your-usda-api-key-here

# AI Configuration
AI_MODEL_NAME=default_model
AI_MODEL_PATH=/path/to/model
AI_API_KEY=your-ai-api-key